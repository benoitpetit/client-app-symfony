{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}


{% block body %}
<div class="container bg-light p-5">

{% for label, messages in app.flashes %}
<div id="flash"class="container">
    <div class="alert alert-{{ label }}">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
</div>
{% endfor %}

<h1>Liste des clients</h1>


<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">nom</th>
      <th scope="col">prenom</th>
      <th scope="col">adresse mail</th>
      <th scope="col">modifier</th>
      <th scope="col">supprimer</th>
    </tr>
  </thead>
  <tbody>
{# boucle affichage des clients #}
{% for client in clients %}
    <tr>
      <th scope="row"><a href="/show/client/{{client.id}}"><span class="badge badge-dark">{{ client.id	}}</span>
</a></th>
      <td>{{ client.name }}</td>
      <td>{{ client.firstname }}</td>
      <td>{{ client.mail }}</td>
      <td><a href="/edit/client/{{client.id}}"><span class="badge badge-info">modifier</span></a></td>
      <td><a href="/delete/client/{{client.id}}"><span class="badge badge-danger">delete </span></a></td>
    </tr>
{% endfor %}

  </tbody>
</table>
</div>
<script src="{{ asset('https://code.jquery.com/jquery-3.4.1.js') }}" type="text/javascript"></script>
<script src="{{ asset('assets/js/clients.js') }}" type="text/javascript"></script>
{% endblock %}
